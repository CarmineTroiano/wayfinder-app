<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <title>Accedi a WayFinder</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>body { font-family: 'Poppins', sans-serif; background: #f3f4f6; }</style>
</head>
<body class="flex items-center justify-center h-screen">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-md">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-800">WayFinder</h2>
            <p class="text-gray-500 text-sm">Il tuo compagno di viaggio intelligente.</p>
        </div>

        <div class="flex mb-6 bg-gray-100 p-1 rounded-lg">
            <button onclick="switchTab('login')" id="tab-login" class="flex-1 py-2 rounded-md text-sm font-bold bg-white shadow-sm text-indigo-600 transition">Login</button>
            <button onclick="switchTab('register')" id="tab-register" class="flex-1 py-2 rounded-md text-sm font-bold text-gray-500 hover:text-indigo-500 transition">Registrati</button>
        </div>

        <form id="form-login" action="/login" method="POST" class="space-y-4">
            <div>
                <label class="text-xs font-bold text-gray-500 ml-1">Email</label>
                <input type="email" name="email" required class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
            </div>
            <div>
                <label class="text-xs font-bold text-gray-500 ml-1">Password</label>
                <input type="password" name="password" required class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
            </div>
            <button type="submit" class="w-full bg-indigo-600 text-white py-3 rounded-lg font-bold hover:bg-indigo-700 transition">Entra</button>
        </form>

        <form id="form-register" action="/register" method="POST" class="space-y-4 hidden">
            <div>
                <label class="text-xs font-bold text-gray-500 ml-1">Email</label>
                <input type="email" name="email" required class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
            </div>
            <div>
                <label class="text-xs font-bold text-gray-500 ml-1">Nome Utente (Visualizzato)</label>
                <input type="text" name="username" required class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
            </div>
            <div>
                <label class="text-xs font-bold text-gray-500 ml-1">Password</label>
                <input type="password" name="password" required class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
            </div>
            <button type="submit" class="w-full bg-indigo-600 text-white py-3 rounded-lg font-bold hover:bg-indigo-700 transition">Crea Account</button>
        </form>
        
        <% if (typeof error !== 'undefined') { %>
            <p class="text-red-500 text-xs text-center mt-4 bg-red-50 p-2 rounded"><%= error %></p>
        <% } %>
    </div>

    <script>
        function switchTab(tab) {
            document.getElementById('form-login').classList.toggle('hidden', tab !== 'login');
            document.getElementById('form-register').classList.toggle('hidden', tab !== 'register');
            
            const btnLogin = document.getElementById('tab-login');
            const btnReg = document.getElementById('tab-register');
            
            if(tab === 'login') {
                btnLogin.classList.add('bg-white', 'shadow-sm', 'text-indigo-600'); btnLogin.classList.remove('text-gray-500');
                btnReg.classList.remove('bg-white', 'shadow-sm', 'text-indigo-600'); btnReg.classList.add('text-gray-500');
            } else {
                btnReg.classList.add('bg-white', 'shadow-sm', 'text-indigo-600'); btnReg.classList.remove('text-gray-500');
                btnLogin.classList.remove('bg-white', 'shadow-sm', 'text-indigo-600'); btnLogin.classList.add('text-gray-500');
            }
        }
    </script>
</body>
</html>